<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        app:titleTextColor="#ffffff" />
    <!--android:background="@color/porcelainBlue"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/food_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/food"
                android:layout_weight="1"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/land"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/travel_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/trip"
                android:layout_weight="1"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mall_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mall"
                android:layout_weight="1"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/other_type"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/other"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Food"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Trip"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mall"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Other"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All tags"
            android:textSize="17sp"/>
        <ImageView
            android:id="@+id/showTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/up_arrow"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:max_select="-1">
    </com.zhy.view.flowlayout.TagFlowLayout>
</LinearLayout>